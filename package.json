{
  "name": "@monorepo/root",
  "version": "0.0.1",
  "private": true,
  "description": "Enterprise monorepo with pnpm and Turborepo",
  "packageManager": "pnpm@9.1.3",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "lint": "turbo run lint",
    "test": "turbo run test",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && pnpm -r clean",
    "prepare": "husky install",
    "docker:up": "docker compose up -d --build --remove-orphans",
    "docker:down": "docker compose down --remove-orphans -v",
    "docker:logs": "docker compose logs -f --tail=200",
    "docker:logs:postgres": "docker compose logs -f postgres",
    "docker:logs:redis": "docker compose logs -f redis",
    "docker:logs:opensearch": "docker compose logs -f opensearch",
    "docker:logs:minio": "docker compose logs -f minio",
    "docker:logs:bullmq": "docker compose logs -f bullmq-dashboard",
    "db:migrate:phase2": "bash ./scripts/migrations/phase-2/apply.sh",
    "connectors:phase3": "bash ./connectors/phase-3/run.sh",
    "seed": "tsx scripts/seed/index.ts",
    "seed:reset": "tsx scripts/seed/reset.ts && tsx scripts/seed/index.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-turbo": "^1.13.0",
    "husky": "^9.0.11",
    "prettier": "^3.1.1",
    "turbo": "^1.13.4",
    "typescript": "^5.4.5",
    "@faker-js/faker": "^8.4.1",
    "tsx": "^4.7.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
