{
  "name": "prospecting-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "build": "npm run build --workspaces",
    "build:ui": "npm run build --workspace=packages/ui",
    "test": "npm run test --workspace=apps/web",
    "test:admin:e2e": "npm run test:e2e --workspace=apps/admin",
    "test:e2e": "npm run test:e2e --workspace=apps/web"
  }
}
