# API service environment
PORT=4000
NODE_ENV=development
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/app_db
PGSSLMODE=disable

# Redis / queues
REDIS_URL=redis://:redislocal@localhost:6379
BULLMQ_QUEUE_PREFIX=local
BULLMQ_METRICS_TTL=3600

# OpenSearch
OPENSEARCH_URL=http://admin:admin@localhost:9200
OPENSEARCH_INDEX=app-documents

# Storage (MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
S3_BUCKET=app-assets
S3_REGION=us-east-1
S3_USE_SSL=false

# Auth
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=7d
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
NEXTAUTH_SECRET=replace-with-long-random-string

# External providers / connectors
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=anthropic-your-key
CONNECTOR_SLACK_BOT_TOKEN=xoxb-your-token
CONNECTOR_GITHUB_APP_ID=000000
CONNECTOR_GITHUB_APP_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
CONNECTOR_SALESFORCE_CLIENT_ID=client-id
CONNECTOR_SALESFORCE_CLIENT_SECRET=client-secret
CONNECTOR_HUBSPOT_API_KEY=hubspot-key
