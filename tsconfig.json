{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@ui/*": [
        "packages/ui/src/*"
      ],
      "@core/*": [
        "packages/core/src/*"
      ],
      "@db/*": [
        "packages/db/src/*"
      ],
      "@search/*": [
        "packages/search/src/*"
      ],
      "@ai/*": [
        "packages/ai/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    ".turbo"
  ]
}
