# -----------------
# Core Postgres
# -----------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_URL=postgresql://postgres:postgres@postgres:5432/app_db
POSTGRES_EXTRA_FLAGS=--shared-buffers=256MB --max_parallel_workers_per_gather=4

# -----------------
# Redis / BullMQ
# -----------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redislocal
REDIS_URL=redis://:redislocal@redis:6379
BULLMQ_QUEUES=default,emails,workflows
BULLMQ_DASHBOARD_PORT=3002
BULLMQ_DASHBOARD_USERNAME=ops
BULLMQ_DASHBOARD_PASSWORD=super-secret

# -----------------
# OpenSearch
# -----------------
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_PROTOCOL=http
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_URL=http://admin:admin@opensearch:9200
OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m

# -----------------
